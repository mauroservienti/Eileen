@model Eileen.Data.Author

@{
    ViewBag.Title = Model.Name;
}

<ul>
    <li>
        <a asp-controller="Authors" asp-action="Delete" asp-route-id="@Model.Id">Cancella questo autore</a>
    </li>
    <li>
        <a asp-controller="Authors" asp-action="NewAuthorBook" asp-route-id="@Model.Id">Aggiungi un libro a questo autore</a>
    </li>
</ul>

<h2>@Model.Name</h2>

<h3>Opere</h3>
<ul>
@foreach (var book in Model.Books)
{
    <li>@book.Title</li>
}
</ul>